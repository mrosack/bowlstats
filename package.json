{
  "name": "@leny/bowlstats",
  "version": "1.0.0",
  "private": true,
  "description": "A small bowling stats tracker",
  "engines": {
    "node": ">=18.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leny/bowlstats.git"
  },
  "source": "src/index.html",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "lint": "npx eslint --fix --cache src",
    "convert:data": "node ./scripts/convert-data.js",
    "preinstall": "npx check-engine",
    "prebuild": "npm run convert:data",
    "prepare": "husky install",
    "build": "npx parcel build",
    "prework": "npm run convert:data",
    "work": "npx parcel"
  },
  "author": "leny <info@flatland.be>",
  "license": "ISC",
  "lint-staged": {
    "*.json": [
      "npx prettier --write"
    ],
    "*.yml": [
      "npx prettier --write"
    ],
    "*.ts": [
      "npx eslint --fix --cache"
    ],
    "*.js": [
      "npx eslint --fix --cache"
    ]
  },
  "alias": {
    "containers": "./src/containers",
    "components": "./src/components",
    "core": "./src/core",
    "types": "./src/types.ts"
  },
  "targets": {
    "default": {
      "distDir": "./docs",
      "context": "browser",
      "isLibrary": false,
      "publicUrl": "/bowlstats"
    }
  },
  "devDependencies": {
    "@leny/eslint-config": "~0.2.0",
    "@parcel/transformer-sass": "~2.8.3",
    "@types/react": "~18.2.14",
    "@types/react-dom": "~18.2.6",
    "@types/react-helmet": "~6.1.6",
    "@typescript-eslint/eslint-plugin": "~5.61.0",
    "@typescript-eslint/parser": "~5.61.0",
    "bowling": "~1.4.2",
    "eslint": "~8.44.0",
    "eslint-plugin-prettier": "5.0.0-alpha.2",
    "eslint-plugin-react": "~7.32.2",
    "eslint-plugin-react-hooks": "~4.6.0",
    "eslint-plugin-unicorn": "~47.0.0",
    "husky": "^8.0.3",
    "lint-staged": "~13.2.3",
    "parcel": "~2.8.3",
    "prettier": "~3.0.0"
  },
  "dependencies": {
    "bulma": "~0.9.4",
    "bulma-switch": "~2.0.4",
    "bulma-tooltip": "~3.0.2",
    "classnames": "~2.3.2",
    "dayjs": "~1.11.9",
    "process": "~0.11.10",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-helmet": "~6.1.0",
    "recharts": "~2.7.2",
    "yaml": "~2.3.1"
  }
}
